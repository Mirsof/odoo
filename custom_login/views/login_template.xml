<odoo>
    <template id="custom_login_template" inherit_id="web.login">
        <!-- Usamos XPath para localizar el lugar donde insertamos el texto -->
        <xpath expr="//div[@class='oe_login_form']" position="before">
            <div class="custom-login-message">
                <h3>Prueba de Odoo</h3>
                <p>Este es un login personalizado de Odoo.</p>
            </div>
        </xpath>
    </template>
</odoo>