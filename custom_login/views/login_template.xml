<odoo>
    <template id="custom_login_template" inherit_id="web.login_layout">
        <!-- Aquí puedes agregar el diseño personalizado -->
        <xpath expr="//div[@id='wrap']" position="replace">
            <div class="container custom-login-container">
                <h2>Bienvenido a mi aplicación</h2>
                <form method="post" action="/web/login">
                    <div class="form-group">
                        <label for="login">Usuario:</label>
                        <input type="text" id="login" name="login" class="form-control" placeholder="Tu usuario" />
                    </div>
                    <div class="form-group">
                        <label for="password">Contraseña:</label>
                        <input type="password" id="password" name="password" class="form-control" placeholder="Tu contraseña" />
                    </div>
                    <button type="submit" class="btn btn-primary">Iniciar sesión</button>
                </form>
            </div>
        </xpath>
    </template>
</odoo>
